<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="camp.codelab.fragments">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".AnimeScrollingActivity"
                android:label="@string/title_activity_anime_scrolling"
                android:parentActivityName=".activities.MainActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name=".MangaScrollingActivity"
                android:label="@string/title_activity_manga_scrolling"
                android:parentActivityName=".activities.MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".CharacterScrollingActivity"
                android:label="@string/title_activity_character_scrolling"
                android:parentActivityName=".activities.MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>